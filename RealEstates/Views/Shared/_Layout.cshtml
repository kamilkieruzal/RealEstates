@using RealEstates.Utils
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Real esates</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/jquery.validate.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/Slideshow.js"></script>
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Strona główna", "Index", "Default", new { area = "" }, new { @class = "navbar-brand" })
				@Html.ActionLink(User.Identity.IsAuthenticated ? "Wyloguj" : "Zaloguj", User.Identity.IsAuthenticated ? "Logout" : "Login", "Login", new { area = "", controller = "Login" }, new { @class = "navbar-brand" })
				@Html.ActionLink("Rejestracja", "Register", "Register", new { area = "", controller = "Login" }, new { @class = "navbar-brand", Style = !User.Identity.IsAuthenticated ? "" : "display:none" })
				@Html.ActionLink("Przeglądaj oferty", "AllOffers", "Offer", new { area = "", controller = "Offer" }, new { @class = "navbar-brand", Style = User.Identity.IsAuthenticated ? "" : "display:none" })
				@Html.ActionLink("Dodaj ofertę", "AddOffer", "MyOffer", new { area = "", controller = "MyOffer" }, new { @class = "navbar-brand", Style = User.Identity.IsAuthenticated ? "" : "display:none" })
				@Html.ActionLink("Moje oferty", "MyOffers", "MyOffer", new { area = "", controller = "MyOffer" }, new { @class = "navbar-brand", Style = User.Identity.IsAuthenticated ? "" : "display:none" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
				</ul>
			</div>
		</div>
	</div> 

	<div class="container body-content">
		@if (TempData[TempDataTypes.Success] != null)
		{
			<div class="alert alert-success">@TempData[TempDataTypes.Success]</div>
		}
		@if (TempData[TempDataTypes.Warning] != null)
		{
			<div class="alert alert-warning">@TempData[TempDataTypes.Warning]</div>
		}
		@RenderBody()
		<hr />
		<footer>
			<p>@DateTime.Now.Year - Real estates</p>
		</footer>
	</div>

	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>